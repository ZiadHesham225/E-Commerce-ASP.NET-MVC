@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h2 class="card-title m-0 py-2">
            <i class="fas fa-tags me-2 text-primary"></i>Categories
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Category
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Name</th>
                        <th style="width: 200px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center py-4 text-muted">
                                <i class="fas fa-info-circle me-1"></i> No categories found
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td class="align-middle ps-3">
                                    <i class="fas fa-tag me-2 text-secondary"></i>@category.Name
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>