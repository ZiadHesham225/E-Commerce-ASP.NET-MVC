@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h2 class="card-title m-0 py-2">
            <i class="fas fa-tag me-2 text-primary"></i>Create Category
        </h2>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-tag text-secondary"></i>
                    </span>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name">
                </div>
                <span asp-validation-for="Name" class="text-danger small mt-1"></span>
            </div>
            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>