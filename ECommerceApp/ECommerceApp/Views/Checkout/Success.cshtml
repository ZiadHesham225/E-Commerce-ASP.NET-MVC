@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card">
                <div class="card-body">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    <h2 class="card-title mt-3">Payment Successful!</h2>
                    <p class="card-text">Thank you for your purchase. Your order has been placed.</p>
                    <p>Order #: @ViewBag.OrderId</p>
                    <a href="/Product" class="btn btn-primary mt-3">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>

