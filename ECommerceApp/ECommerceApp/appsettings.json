{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ECommerceDb;Integrated Security=True;Trust Server Certificate=True"
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "UserName": "your_email@gmail.com",
    "Password": "your_app_password",
    "FromEmail": "noreply@store.com",
    "FromName": "E-Commerce"
  },
  "Stripe": {
    "SecretKey": "YOUR_STRIPE_SECRET",
    "PublishableKey": "YOUR_STRIPE_PUBLISHABLE_KEY",
    "SuccessUrl": "https://localhost:7071/Checkout/Success",
    "CancelUrl": "https://localhost:7071/Checkout/Cancel"
  },
  "Authentication": {
    "Google": {
      "ClientId": "your_google_client_id",
      "ClientSecret": "your_google_client_secret"
    }
  }
}